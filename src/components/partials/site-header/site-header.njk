<header class="header site-header">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-12 col-md-2">
        <div class="header__logo" data-aos="fade-down">
          {% render "@logo" %}
        </div>
        <div class="header__catalog-button" data-aos="fade-up">
          {% render "@button", catalogButton, true %}
        </div>
      </div>
      <div class="col-12 col-md-6" data-aos="fade-in">
        {% render "@nav", nav, true %}
        {% render "@search-form", searchForm, true %}
      </div>
      <div class="col-12 col-md-4">
        <div class="header__contacts" data-aos="fade-down">
          <div class="header__schedule">{{ contacts.schedule }}</div>
          <ul class="header__phones">
            {% for phone in contacts.phones %}
              <li class="header__phone-item">
                <a href="tel:{{ phone | formatPhone }}" class="phone">{{ phone }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
        <ul class="header__actions">
          {% for action in actions %}
            <li class="header__action action">
              {% render '@' + action.component.name, action.component.config, true %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</header>

